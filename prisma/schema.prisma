// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id
  name       String
  email      String     @unique
  password   String
  created_at String
  mensagens  Mensagem[]
  rooms      Room[]

  @@map("users")
}

model Mensagem {
  id         String @id
  content    String
  created_at String
  Room       Room   @relation(fields: [roomId], references: [id])
  roomId     String
  user       User   @relation(fields: [userId], references: [id])
  userId     String

  @@map("mensagens")
}

model Room {
  id          String     @id
  name        String     @unique
  description String
  created_at  String
  users       User[]
  mensagens   Mensagem[]

  @@map("rooms")
}
